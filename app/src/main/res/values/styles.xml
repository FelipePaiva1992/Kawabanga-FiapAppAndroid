<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Fiap" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Fiap.Botao">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorAccent</item>
        <item name="android:radius">@dimen/radius_botao_customizado</item>
        <item name="android:textSize">@dimen/tamanho_texto_botao_customizado</item>
        <item name="android:padding">@dimen/padding_botao_customizado</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="checkbox_pizza">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
    </style>

</resources>
